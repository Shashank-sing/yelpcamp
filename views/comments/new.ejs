<%-include("../partials/header")%>


<div class="container bg-light w-50" id="box">

    <h1 class="text-center mt-4" id="CreateNew">Create New Comment for <%=campground.name%></h1>
    
    <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
        
        <div class="container mt-3 w-75 px-5">
            <div class="form-group">
                <label for="body">Content</label>
                <input type="text" class="form-control" id="body" name="body" placeholder="Content">
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-large w-50 float-right">Submit</button>
                <a class="btn btn-outline-secondary btn-large float-right mr-2" href="/campgrounds/<%=campground["_id"]%>">Back</a>
            </div>
            
        </div>
        
        
    </form>
    
</div>


<%- include("../partials/footer") %>

