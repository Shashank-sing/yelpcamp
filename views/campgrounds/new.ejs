<%- include("../partials/header") %>

<div class="container bg-light w-50" id="box">
    
    <h1 class="text-center mt-4" id="CreateNew">Create A New Campground</h1>

<form action="/campgrounds" method="POST">
    
    <div class="container mt-3 w-75 px-5">
        <div class="form-group">
            <label for="formGroupExampleInput">Name</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Name" name="name">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Image</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Image URL" name="image">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput3">Description</label>
            <input type="text" class="form-control" id="formGroupExampleInput3" placeholder="Description" name="desc">
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-large w-50 float-right">Submit</button>
            <a class="btn btn-outline-secondary btn-large float-right mr-2" href="/campgrounds">Back</a>
        </div>
       
    </div>
    
    
</form>

</div>



